<div class="col-md-8" style="margin: 0 auto;">

    <EditForm Model="Property" OnSubmit="ApplyChanges">
        <div class="d-flex flex-row">
            <div class="flex-fill">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Property Name</label>
                    <div class="col-sm-10">
                        <InputText class="form-control" @bind-Value="Property.Name" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Help text</label>
                    <div class="col-sm-10">
                        <InputText class="form-control" @bind-Value="Property.HelpText" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Binary variable</label>
                    <div class="col-sm-10">
                        <InputSelect class="form-control" @bind-Value="Property.IsDichotomousStr">
                            @foreach (var option in Property.DichotomousOptions)
                            {
                                <option value="@option">@option</option>
                            }
                        </InputSelect>
                        <small>Property is yes/no, true/false</small>
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Positive variable</label>
                    <div class="col-sm-10">
                        <InputSelect class="form-control" @bind-Value="Property.MoreIsBetterStr">
                            @foreach (var option in Property.MoreIsBetterOptions)
                            {
                                <option value="@option">@option</option>
                            }
                        </InputSelect>

                        <small>More is better</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Units</label>
                    <div class="col-sm-10">
                        <InputText class="form-control" @bind-Value="Property.Unit" placeholder="Empty if Binary" />
                    </div>
                </div>

                <div class="d-flex">
                    <div class="m-2">
                        <button class="btn btn-outline-primary" type="submit">Accept changes</button>
                    </div>
                    <div class="m-2">
                        <button class="btn btn-outline-danger" type="button" @onclick="@(()=> PropertyChange.InvokeAsync(null))">Discard</button>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
</div>
